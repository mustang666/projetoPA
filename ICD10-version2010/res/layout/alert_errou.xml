<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border_alert_errou"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_pergunta_alert_errou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_resp_aRespCertae"
        android:layout_below="@+id/txt_resp_aRespCertae"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_resposta_alert_errou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_pergunta_alert_errou"
        android:layout_below="@+id/txt_pergunta_alert_errou"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTempoResp_value_alert_errou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTempoR"
        android:layout_alignBottom="@+id/txtTempoR"
        android:layout_toRightOf="@+id/txtTempoR"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtTempoR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_resposta_alert_errou"
        android:layout_below="@+id/txt_resposta_alert_errou"
        android:layout_marginTop="15dp"
        android:text="@string/txt_tempoResp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:shadowColor="#ff0000"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:text="@string/txt_errou_resp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_resp_aRespCertae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rAnswer"
        android:layout_centerHorizontal="true"
        android:text="A resposta certa para a questÃ£o: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>